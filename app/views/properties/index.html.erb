<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Property name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Type of property</th>
      <th>Sqft</th>
      <th>No of rooms</th>
      <th>No of bathrooms</th>
      <th>Occupied by renter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.user.name %></td>
        <td><%= property.property_name %></td>
        <td><%= property.address %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.zip %></td>
        <td><%= property.type_of_property %></td>
        <td><%= property.sqft %></td>
        <td><%= property.no_of_rooms %></td>
        <td><%= property.no_of_bathrooms %></td>
        <td><%= property.occupied_by_renter %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><% link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

